{
  "typescript.tsserver.watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriorityPolling"
  },
  "eslint.useFlatConfig": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "html"],
  "files.associations": { "*.css": "tailwindcss" },
  "css.validate": false,
  "stylelint.validate": ["tailwindcss"],
  "editor.defaultFormatter": "dprint.dprint",
  "dprint.path": "./node_modules/.bin/dprint",
  "editor.quickSuggestions": { "strings": "on" },
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": "active",
  "[tailwindcss]": { "editor.codeActionsOnSave": { "source.fixAll.stylelint": "always" } }
}
