{
  "name": "root",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "lerna run --parallel dev",
    "build": "lerna run build",
    "test": "lerna run test",
    "publish": "npm run build && lerna publish",
    "lint": "npm run lint:eslint; npm run lint:biome; npm run lint:style; npm run fmt:check",
    "lint:eslint": "eslint .",
    "lint:biome": "biome lint .",
    "lint:style": "stylelint **/*.css",
    "fix": "npm run fix:eslint; npm run fix:biome; npm run fix:style; npm run fmt",
    "fix:eslint": "eslint --fix .",
    "fix:biome": "biome lint --write .",
    "fix:style": "stylelint --fix **/*.css",
    "fmt": "dprint fmt",
    "fmt:check": "dprint check"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "browserslist": "^4.23.2",
    "dprint": "^0.47.2",
    "lerna": "^8.1.7",
    "lightningcss": "^1.25.1",
    "stylelint": "^16.7.0",
    "stylelint-config-recess-order": "^5.0.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-css-modules": "^1.2.2",
    "stylelint-plugin-defensive-css": "^1.0.4",
    "stylelint-plugin-logical-css": "^1.2.1",
    "stylelint-use-nesting": "^5.1.1",
    "tailwindcss": "4.0.0-alpha.17",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "packageManager": "pnpm@9.5.0"
}
