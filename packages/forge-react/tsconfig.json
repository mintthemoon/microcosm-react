{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./lib",
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "paths": {
      "$lib": ["./lib"],
      "$lib/*": ["./lib/*"],
      "$util": ["./lib/utility"],
      "$types": ["./lib/types"]
    }
  },
  "include": ["lib/**/*.ts", "lib/**/*.tsx"]
}
